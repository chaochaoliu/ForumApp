<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Reply count:</strong>
  <%= @post.reply_count %>
</p>

<% @replies.each do |reply|%>
   <%= reply.content %><br>
<%end%>

<p>
  <strong>View count:</strong>
  <%=@post.view_count %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @post.topic.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<p>
  <strong>Replies:</strong>
  <%= @post.reply_count %>
</p>

<% if can? :update, @post %>
    <%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
<%= link_to 'Back', @post.topic %>
