<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Reply count:</strong>
  <%= @post.reply_count %>
</p>

<% @replies.each do |reply|%>
<p>
   <%= reply.content %>
   <% if can? :destroy, Reply %>
     <%= link_to 'Destroy', reply_path(reply.id), method: :delete, data: { confirm: 'Are you sure?' } %>
   <% end %>

</p>

<%end%>

<p>
  <strong>View count:</strong>
  <%=@post.view_count %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @post.topic.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<p>
  <strong>Replies:</strong>
  <%= @post.reply_count %>
</p>

<td>
  <% if can? :create, Reply %>
    <%=  link_to 'Reply', new_reply_path(:post_id => @post.id) %>
  <% end %>
</td>

<td>
  <% if can? :update, Post %>
    <%=  link_to 'Edit', edit_post_path(@post) %>
  <% end %>
</td>

<td>
  <% if can? :destroy, Post %>
  <%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</td>

<% if can? :update, @post %>
    <%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
<%= link_to 'Back', @post.topic %>
