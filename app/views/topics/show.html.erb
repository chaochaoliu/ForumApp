<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @topic.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reply count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.reply_count %></td>
        <td><%= link_to 'Show', post %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<% if can? :create, Post %>
  <%= link_to 'New Post', new_post_path(topic_id: @topic.id) %> <br><br>
<% end %>

<% if can? :update, Topic %>
  <%= link_to 'Edit Topic', edit_topic_path(@topic) %> 
<% end %>
<%= link_to 'Back', topics_path %>
