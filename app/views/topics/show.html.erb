<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @topic.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reply count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.reply_count %></td>
        <td><%= link_to 'Show', post %></td>
        <td>
          <% if can? :update, post %>
            <%=  link_to 'Edit', edit_post_path(post) %>
          <% end %>
       </td>
        <td>
          <% if can? :destroy, post %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if can? :update, Topic %>
  <%= link_to 'Edit', edit_topic_path(@topic) %> 
<% end %>
<%= link_to 'Back', topics_path %>
